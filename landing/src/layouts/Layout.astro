
---
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import SEO from '../components/SEO.astro';
import "../assets/styles.css";

interface Props {
	title?: string;
	description?: string;
	image?: string;
	imageAlt?: string;
	robots?: string;
	type?: string;
	siteName?: string;
	published?: string;
	author?: string;
}

const {
	title = 'gsheetbase.com',
	description = 'A database that lives in your spreadsheet',
	image = '/og-image.svg',
	imageAlt = 'gsheetbase preview',
	robots = 'index,follow',
	type = 'website',
	siteName = 'gsheetbase',
	published = undefined,
	author = undefined,
} = Astro.props as Props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />

		<SEO
			title={title}
			description={description}
			image={image}
			imageAlt={imageAlt}
			type={type}
			robots={robots}
			siteName={siteName}
			published={published}
			author={author}
		/>

		<link rel="manifest" href="/site.webmanifest" />
		<link rel="apple-touch-icon" href="/favicon.svg" />
		<meta name="theme-color" content="#ffffff" />

		<!-- Structured data (JSON-LD) -->
		<script type="application/ld+json">
		{`{
		  "@context": "https://schema.org",
		  "@type": "WebSite",
		  "name": "gsheetbase",
		  "url": "https://gsheetbase.com/",
		  "description": "A database that lives in your spreadsheet"
		}`}
		</script>
		<meta name="generator" content={Astro.generator} />

		<!-- Tailwind CSS is loaded from the project's built stylesheet -->

		<!-- Google Fonts -->
		<link href="https://fonts.googleapis.com/css2?family=Manrope:wght@200;300;400;500;600;700;800&display=swap" rel="stylesheet" />
		<link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet" />
	</head>
	<body class="bg-background-light dark:bg-background-dark text-slate-900 dark:text-slate-100 transition-colors duration-200">
		<Header/>
		<slot />
		<Footer/>
	</body>
</html>

<style is:global>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}

	body {
		font-family: 'Manrope', sans-serif;
		-webkit-font-smoothing: antialiased;
	}

	.code-container {
		background: #1a1a1a;
		color: #d1d1d1;
	}

	.neon-accent {
		color: #3cf91a;
	}

	.border-subtle {
		border-color: rgba(0, 0, 0, 0.08);
	}

	.dark .border-subtle {
		border-color: rgba(255, 255, 255, 0.08);
	}
</style>
