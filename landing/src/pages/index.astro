---
import Layout from "../layouts/Layout.astro";
const GOOGLE_AUTH_BASE = import.meta.env.VITE_APP_BASE_URL ?? "";
---

<Layout
  {...{
    bodyClass:
      "bg-background-light dark:bg-background-dark text-slate-900 dark:text-slate-100 transition-colors duration-200",
  } as any}
>
  <!-- Hero Section -->
  <main class="w-full flex flex-col items-center">
    <section class="w-full max-w-[900px] px-6 pt-24 pb-16 text-center">
      <div
        class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-primary/10 border border-primary/20 text-primary text-xs font-bold mb-8 uppercase tracking-widest"
      >
        <span class="relative flex h-2 w-2">
          <span
            class="animate-ping absolute inline-flex h-full w-full rounded-full bg-primary opacity-75"
          ></span>
          <span class="relative inline-flex rounded-full h-2 w-2 bg-primary"
          ></span>
        </span>
        Private Beta Now Available
      </div>
      <h1
        class="text-5xl md:text-7xl font-extrabold tracking-tighter leading-[1.1] mb-6"
      >
        A database that lives in your <span
          class="underline decoration-primary decoration-4 underline-offset-8"
          >spreadsheet</span
        >
      </h1>
      <p
        class="text-lg md:text-xl text-slate-500 dark:text-slate-400 max-w-[700px] mx-auto mb-10 leading-relaxed font-medium"
      >
        The fastest way to turn Google Sheets into a production-ready JSON API.
        No configuration, zero boilerplate, just raw data.
      </p>
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        <a
          href={GOOGLE_AUTH_BASE
            ? `${GOOGLE_AUTH_BASE}/auth/google/start`
            : "/auth/google"}
          role="button"
          class="w-full border border-primary/20 text-primary sm:w-auto min-w-[180px] h-14 px-8 rounded-xl font-bold text-base sm:text-lg hover:shadow-[0_0_20px_rgba(60,249,26,0.3)] transition-all flex items-center justify-center whitespace-nowrap"
        >
          <span class="inline-flex items-center mr-3" aria-hidden="true">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 533.5 544.3"
              class="w-4 h-4 sm:w-5 sm:h-5"
              fill="none"
            >
              <path
                fill="#4285F4"
                d="M533.5 278.4c0-17.4-1.4-34.1-4.1-50.4H272v95.6h146.9c-6.3 34.1-25.1 62.9-53.6 82.2v68.2h86.6c50.7-46.7 80.6-115.6 80.6-190.6z"
              ></path>
              <path
                fill="#34A853"
                d="M272 544.3c72.9 0 134.3-24.1 179.1-65.6l-86.6-68.2c-24.1 16.2-55 25.8-92.5 25.8-71 0-131.2-47.9-152.6-112.3H28.5v70.7C72.9 489.1 167.6 544.3 272 544.3z"
              ></path>
              <path
                fill="#FBBC05"
                d="M119.4 304.1c-5.5-16.5-8.6-34.1-8.6-52s3.1-35.5 8.6-52V129.2H28.5C10.2 168.7 0 213.8 0 259.9s10.2 91.2 28.5 130.7l90.9-86.5z"
              ></path>
              <path
                fill="#EA4335"
                d="M272 107.7c39.6 0 75.2 13.6 103.2 40.4l77.4-77.4C405.5 24.3 344.1 0 272 0 167.6 0 72.9 55.2 28.5 138.8l90.9 86.5C140.8 155.6 201 107.7 272 107.7z"
              ></path>
            </svg>
          </span>
          Continue with Google
        </a>
        <button
          class="w-full sm:w-auto min-w-[180px] bg-slate-200 dark:bg-white/10 text-slate-900 dark:text-white h-14 px-8 rounded-xl font-bold text-lg hover:bg-slate-300 dark:hover:bg-white/20 transition-all"
        >
          View Documentation
        </button>
      </div>
    </section>

    <!-- Product Mockup Section -->
    <section class="w-full max-w-[1100px] px-6 pb-24">
      <div
        class="relative bg-white dark:bg-black rounded-2xl border border-subtle shadow-2xl overflow-hidden aspect-[16/10] flex flex-col"
      >
        <!-- Browser/App Header -->
        <div
          class="h-12 border-b border-subtle flex items-center px-4 justify-between bg-slate-50 dark:bg-white/5"
        >
          <div class="flex gap-2" aria-hidden="true">
            <div class="w-3 h-3 rounded-full bg-red-400"></div>
            <div class="w-3 h-3 rounded-full bg-yellow-400"></div>
            <div class="w-3 h-3 rounded-full bg-green-400"></div>
          </div>
          <div class="text-xs font-mono text-slate-400 dark:text-white/30">
            gsheetbase.app â€” connected to "Production_Inventory.xlsx"
          </div>
          <div class="w-12"></div>
        </div>
        <!-- Split View -->
        <div class="flex flex-1 overflow-hidden">
          <!-- Left: Sheet UI Mockup -->
          <div
            class="w-1/2 border-r border-subtle p-6 bg-white dark:bg-slate-900/50"
          >
            <div class="flex items-center justify-between mb-4">
              <span
                class="text-xs font-bold uppercase tracking-widest text-slate-400"
                >Google Sheet View</span
              >
              <span
                class="text-[10px] bg-blue-100 text-blue-600 px-2 py-0.5 rounded-full font-bold"
                >LIVE</span
              >
            </div>
            <div class="space-y-2">
              <div
                class="grid grid-cols-4 gap-2 border-b border-subtle pb-2 text-[10px] font-bold text-slate-500"
              >
                <div>ID</div><div>Product</div><div>Price</div><div>Stock</div>
              </div>
              <div
                class="grid grid-cols-4 gap-2 text-[11px] font-medium py-1 border-b border-slate-50 dark:border-white/5"
              >
                <div>001</div><div>Macbook Pro</div><div>$2,499</div><div
                  class="text-primary font-bold"
                >
                  12
                </div>
              </div>
              <div
                class="grid grid-cols-4 gap-2 text-[11px] font-medium py-1 border-b border-slate-50 dark:border-white/5"
              >
                <div>002</div><div>iPad Air</div><div>$599</div><div
                  class="text-primary font-bold"
                >
                  45
                </div>
              </div>
              <div
                class="grid grid-cols-4 gap-2 text-[11px] font-medium py-1 border-b border-slate-50 dark:border-white/5"
              >
                <div>003</div><div>Studio Display</div><div>$1,599</div><div
                  class="text-primary font-bold"
                >
                  8
                </div>
              </div>
              <div
                class="grid grid-cols-4 gap-2 text-[11px] font-medium py-1 border-b border-slate-50 dark:border-white/5"
              >
                <div>004</div><div>iPhone 15</div><div>$999</div><div
                  class="text-primary font-bold"
                >
                  22
                </div>
              </div>
            </div>
            <div class="mt-8 flex justify-center">
              <div
                class="w-3/4 h-24 bg-slate-100 dark:bg-white/5 rounded-lg flex items-center justify-center border-2 border-dashed border-subtle"
              >
                <span class="material-symbols-outlined text-slate-300">add</span
                >
              </div>
            </div>
          </div>
          <!-- Right: JSON View Mockup -->
          <div class="w-1/2 p-6 code-container font-mono text-sm relative">
            <div class="flex items-center justify-between mb-4">
              <span
                class="text-xs font-bold uppercase tracking-widest text-white/40"
                >JSON API Endpoint</span
              >
              <div class="flex gap-2">
                <span
                  class="w-2 h-2 rounded-full bg-primary shadow-[0_0_8px_#3cf91a]"
                ></span>
              </div>
            </div>
            <pre
              class="text-[12px] overflow-x-auto"><code>&#123;<br />  <span class="text-blue-400">"status"</span>: <span class="neon-accent">"success"</span>,<br />  <span class="text-blue-400">"data"</span>: [<br />    &#123;<br />      <span class="text-blue-400">"id"</span>: <span class="text-orange-300">1</span>,<br />      <span class="text-blue-400">"name"</span>: <span class="neon-accent">"Macbook Pro"</span>,<br />      <span class="text-blue-400">"price"</span>: <span class="text-orange-300">2499.00</span>,<br />      <span class="text-blue-400">"inStock"</span>: <span class="text-orange-300">true</span><br />    &#125;,<br />    &#123; <span class="text-slate-500">...</span> &#125;<br />  ]<br />&#125;</code></pre>
            <div class="absolute bottom-6 right-6">
              <button
                aria-label="Copy API URL"
                class="bg-white/10 hover:bg-white/20 text-white p-2 rounded-lg transition-colors flex items-center gap-2 text-xs"
              >
                <span class="material-symbols-outlined text-sm"
                  >content_copy</span
                >
                Copy URL
              </button>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Features Grid -->
    <section class="w-full max-w-[1100px] px-6 py-20 border-t border-subtle">
      <div class="mb-16">
        <h2 class="text-3xl font-extrabold tracking-tight mb-4">
          Built for Production
        </h2>
        <div class="w-12 h-1 bg-primary"></div>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
        <div class="flex flex-col gap-5">
          <div
            class="w-12 h-12 rounded-xl bg-slate-50 dark:bg-white/5 flex items-center justify-center text-primary border border-subtle"
          >
            <span class="material-symbols-outlined font-bold">bolt</span>
          </div>
          <div>
            <h3 class="text-xl font-extrabold tracking-tight mb-3">
              Smart Caching
            </h3>
            <p
              class="text-slate-500 dark:text-slate-400 leading-relaxed font-medium"
            >
              Reduce Google API calls by caching your sheet data and serving it
              from fast global servers. Most requests never hit Google, keeping
              your app fast and reliable.
            </p>
          </div>
        </div>
        <div class="flex flex-col gap-5">
          <div
            class="w-12 h-12 rounded-xl bg-slate-50 dark:bg-white/5 flex items-center justify-center text-primary border border-subtle"
          >
            <span class="material-symbols-outlined font-bold">shield</span>
          </div>
          <div>
            <h3 class="text-xl font-extrabold tracking-tight mb-3">
              Secure Auth &amp; Rate Limiting
            </h3>
            <p
              class="text-slate-500 dark:text-slate-400 leading-relaxed font-medium"
            >
              Protect your endpoints with API keys and custom rate limits.
              Control exactly who can access your data.
            </p>
          </div>
        </div>
        <div class="flex flex-col gap-5">
          <div
            class="w-12 h-12 rounded-xl bg-slate-50 dark:bg-white/5 flex items-center justify-center text-primary border border-subtle"
          >
            <span class="material-symbols-outlined font-bold">edit_note</span>
          </div>
          <div>
            <h3 class="text-xl font-extrabold tracking-tight mb-3">
              Read/Write Support
            </h3>
            <p
              class="text-slate-500 dark:text-slate-400 leading-relaxed font-medium"
            >
              Not just a reader. Use POST and PUT requests to update your
              spreadsheet data directly from your application.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Use Cases -->
    <section
      class="w-full max-w-[1100px] px-6 py-24 bg-slate-50 dark:bg-white/5 rounded-[2.5rem] my-12"
    >
      <div class="text-center mb-16">
        <h2 class="text-4xl font-extrabold tracking-tight mb-4">
          What can you build with gsheetbase?
        </h2>
        <p class="text-slate-500 font-medium">
          Stop over-engineering. Start shipping.
        </p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div
          class="bg-white dark:bg-black p-8 rounded-2xl border border-subtle hover:border-primary/50 transition-colors group"
        >
          <div
            class="text-slate-300 group-hover:text-primary transition-colors mb-6"
          >
            <span class="material-symbols-outlined font-bold text-4xl">web</span
            >
          </div>
          <h3 class="text-xl font-bold mb-3">CMS-driven Landing Pages</h3>
          <p class="text-slate-500 dark:text-slate-400 text-sm leading-relaxed">
            Let non-technical teammates update website copy, pricing, and
            testimonials directly in Google Sheets.
          </p>
        </div>
        <div
          class="bg-white dark:bg-black p-8 rounded-2xl border border-subtle hover:border-primary/50 transition-colors group"
        >
          <div
            class="text-slate-300 group-hover:text-primary transition-colors mb-6"
          >
            <span class="material-symbols-outlined font-bold text-4xl"
              >admin_panel_settings</span
            >
          </div>
          <h3 class="text-xl font-bold mb-3">Internal Admin Tools</h3>
          <p class="text-slate-500 dark:text-slate-400 text-sm leading-relaxed">
            Build custom dashboards and internal workflows without setting up a
            traditional database or SQL server.
          </p>
        </div>
        <div
          class="bg-white dark:bg-black p-8 rounded-2xl border border-subtle hover:border-primary/50 transition-colors group"
        >
          <div
            class="text-slate-300 group-hover:text-primary transition-colors mb-6"
          >
            <span class="material-symbols-outlined font-bold text-4xl"
              >rocket_launch</span
            >
          </div>
          <h3 class="text-xl font-bold mb-3">Rapid MVPs &amp; Directories</h3>
          <p class="text-slate-500 dark:text-slate-400 text-sm leading-relaxed">
            Launch job boards, resource libraries, or startup directories in
            hours instead of days.
          </p>
        </div>
      </div>
    </section>

    <!-- Centered CTA Section -->

    <section class="w-full max-w-[1100px] px-6 py-24">
      <div
        class="bg-slate-900 dark:bg-white rounded-[2rem] p-12 md:p-24 text-center relative overflow-hidden"
      >
        <div
          class="absolute top-0 right-0 w-64 h-64 bg-primary/20 blur-[120px] rounded-full -mr-32 -mt-32"
        >
        </div>
        <div
          class="absolute bottom-0 left-0 w-64 h-64 bg-primary/10 blur-[120px] rounded-full -ml-32 -mb-32"
        >
        </div>
        <h2
          class="text-4xl md:text-6xl font-extrabold tracking-tighter text-white dark:text-slate-900 mb-8 relative z-10"
        >
          Ready to build faster?
        </h2>
        <div
          class="flex flex-col sm:flex-row items-center justify-center gap-6 relative z-10"
        >
          <a
            href={GOOGLE_AUTH_BASE
              ? `${GOOGLE_AUTH_BASE}/auth/google/start`
              : "/auth/google"}
            role="button"
            class="w-full sm:w-auto min-w-[200px] border border-primary/20 border text-primary h-14 px-10 rounded-xl font-bold text-base sm:text-lg hover:scale-105 transition-transform flex items-center justify-center whitespace-nowrap"
          >
            <span class="inline-flex items-center mr-3" aria-hidden="true">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 533.5 544.3"
                class="w-4 h-4 sm:w-5 sm:h-5"
                fill="none"
              >
                <path
                  fill="#4285F4"
                  d="M533.5 278.4c0-17.4-1.4-34.1-4.1-50.4H272v95.6h146.9c-6.3 34.1-25.1 62.9-53.6 82.2v68.2h86.6c50.7-46.7 80.6-115.6 80.6-190.6z"
                ></path>
                <path
                  fill="#34A853"
                  d="M272 544.3c72.9 0 134.3-24.1 179.1-65.6l-86.6-68.2c-24.1 16.2-55 25.8-92.5 25.8-71 0-131.2-47.9-152.6-112.3H28.5v70.7C72.9 489.1 167.6 544.3 272 544.3z"
                ></path>
                <path
                  fill="#FBBC05"
                  d="M119.4 304.1c-5.5-16.5-8.6-34.1-8.6-52s3.1-35.5 8.6-52V129.2H28.5C10.2 168.7 0 213.8 0 259.9s10.2 91.2 28.5 130.7l90.9-86.5z"
                ></path>
                <path
                  fill="#EA4335"
                  d="M272 107.7c39.6 0 75.2 13.6 103.2 40.4l77.4-77.4C405.5 24.3 344.1 0 272 0 167.6 0 72.9 55.2 28.5 138.8l90.9 86.5C140.8 155.6 201 107.7 272 107.7z"
                ></path>
              </svg>
            </span>
            Continue with Google
          </a>
        </div>
        <p
          class="mt-8 text-slate-400 dark:text-slate-500 font-bold uppercase tracking-widest text-xs relative z-10"
        >
          No credit card required.
        </p>
      </div>
    </section>
  </main>
</Layout>
