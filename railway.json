{
  "$schema": "https://railway.app/railway.schema.json",
  "services": [
    {
      "name": "web",
      "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "web/Dockerfile"
      },
      "deploy": {
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
      },
      "variables": {
        "PORT": "8080"
      }
    },
    {
      "name": "worker",
      "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "worker/Dockerfile"
      },
      "deploy": {
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
      },
      "variables": {
        "WORKER_PORT": "8081"
      }
    }
  ]
}