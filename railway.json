{
  "$schema": "https://railway.app/railway.schema.json",
  "services": [
    {
      "name": "web",
      "root": "web",
      "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "web/Dockerfile"
      },
      "deploy": {
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
      }
    },
    {
      "name": "worker",
      "root": "worker",
      "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "worker/Dockerfile"
      },
      "deploy": {
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
      }
    }
  ]
}